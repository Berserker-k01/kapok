# Configuration Fly.io pour Admin Panel
# Copiez vers fly.toml et modifiez

app = "lesigne-admin-panel"
primary_region = "cdg"

[build]
  dockerfile = "Dockerfile"

# Pour passer VITE_API_URL au build, utilisez:
# fly deploy --build-arg VITE_API_URL=https://lesigne-api.fly.dev/api

[env]
  NODE_ENV = "production"

[http_service]
  internal_port = 80
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0
  processes = ["app"]

[[vm]]
  cpu_kind = "shared"
  cpus = 1
  memory_mb = 256

