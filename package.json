{
  "name": "lesigne-platform",
  "version": "1.0.0",
  "description": "Plateforme e-commerce multi-tenant Lesigne",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "build": "npm run build:prod",
    "postinstall": "npm run install:all",
    "install:all": "npm run install:server && npm run install:user-panel && npm run install:admin-panel",
    "install:server": "npm install --prefix server --production",
    "install:user-panel": "npm install --prefix user-panel --include=dev",
    "install:admin-panel": "npm install --prefix admin-panel --include=dev",
    "build:all": "npm run build:user-panel && npm run build:admin-panel",
    "build:user-panel": "npm run build --prefix user-panel",
    "build:admin-panel": "npm run build --prefix admin-panel",
    "build:prod": "npm run build:all",
    "deploy": "npm run build:prod && npm start"
  },
  "keywords": [
    "ecommerce",
    "multi-tenant",
    "saas",
    "react",
    "nodejs",
    "postgresql",
    "express"
  ],
  "author": "Lesigne Team",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "pg": "^8.14.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "stripe": "^14.9.0",
    "openai": "^6.10.0",
    "googleapis": "^167.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.9"
  }
}