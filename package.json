{
  "name": "lesigne-platform",
  "version": "1.0.0",
  "description": "Plateforme e-commerce multi-tenant Lesigne",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node index.js",
    "install": "cd server && npm install --production",
    "postinstall": "npm run install:all",
    "install:all": "npm run install:server && npm run install:user-panel && npm run install:admin-panel",
    "install:server": "cd server && npm install --production",
    "install:user-panel": "cd user-panel && npm install",
    "install:admin-panel": "cd admin-panel && npm install",
    "build:all": "npm run build:user-panel && npm run build:admin-panel",
    "build:user-panel": "cd user-panel && npm run build",
    "build:admin-panel": "cd admin-panel && npm run build",
    "start:server": "cd server && npm start",
    "build:prod": "npm run install:all && npm run build:all",
    "setup:production": "npm run build:prod",
    "deploy": "npm run build:prod && npm run start:server"
  },
  "keywords": [
    "ecommerce",
    "multi-tenant",
    "saas",
    "react",
    "nodejs",
    "postgresql",
    "express"
  ],
  "author": "Lesigne Team",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}